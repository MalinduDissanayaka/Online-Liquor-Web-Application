@model LiquorOnline.Models.Product

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>


    <h4>Product</h4>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Productname)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Productname)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Brand)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Brand)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Deliver)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Deliver)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Quantity)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Quantity)
                </dd>
            </dl>

            <div class="col-md-4 mb-3">
                <div class="qty-container">
                    <button class="qty-btn-minus btn-light" type="button"><i class="fa fa-minus"></i></button>
                    <input type="text" name="qty" value="0" class="input-qty" />
                    <button class="qty-btn-plus btn-light" type="button"><i class="fa fa-plus"></i></button>
                </div>
            </div>

            <button type="button" class="btn btn- btn-danger btn-block">Buy</button>
        </div>
        <div class="col-md-6">
            <img src="@("~/images/"+Model.ImageUrl)" asp-append-version="true" style="width:250px; " />
        </div>

    </div>



    
    
</div>
